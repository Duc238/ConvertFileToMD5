<Window x:Class="ConvertFileToMD5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertFileToMD5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox AcceptsReturn="True" x:Name="txtFilePath"></TextBox>
        <Button Content="Choose File" Grid.Row="1" FontSize="40" x:Name="btnChooseFile" Click="btnChooseFile_Click"></Button>
        <Button Grid.Row="3" Content="Covert to md5" FontSize="40" x:Name="btnConvertFileToMD5" Click="btnConvertFileToMD5_Click"></Button>
        <TextBox Grid.Row="2" AcceptsReturn="True" x:Name="txtMD5FromFile"></TextBox>
    </Grid>
</Window>
